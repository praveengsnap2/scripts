<log4j:configuration>
    <appender name="Snap2BuyNew" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/tmp/logs/Snap2BuyNew.log"/>

        <!--<param name="file" value="/usr/share/apache-tomcat-8.0.26/logs/Snap2Pay.log"/>-->
        <param name="DatePattern" value="'.' yyyy-MM-dd"/>
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="100"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d] [%p] [%t] [%c:%F:%L] - %m%n"/>
        </layout>
    </appender>


    <appender name="Snap2BuyNewRoot" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="/tmp/logs/Snap2BuyNew_root.log"/>

        <!--<param name="file" value="/usr/share/apache-tomcat-8.0.26/logs/Snap2Pay.log"/>-->
        <param name="DatePattern" value="'.' yyyy-MM-dd"/>
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="1"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d] [%p] [%t] [%c:%F:%L] - %m%n"/>
        </layout>
    </appender>


    <category name="s2b">
        <priority value="debug"/>
        <appender-ref ref="Snap2BuyNew"/>
    </category>

    <root>
        <level value="info"/>
        <appender-ref ref="Snap2BuyNewRoot"/>
    </root>

</log4j:configuration>